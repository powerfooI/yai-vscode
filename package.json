{
  "name": "yai",
  "displayName": "yai",
  "description": "Yet Another Importer",
  "repository": {
    "type": "git",
    "url": "https://github.com/powerfooi/yai-vscode"
  },
  "publisher": "powerfooi",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.56.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:go"
  ],
  "icon": "images/yai-logo.png",
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "id": "yai",
        "title": "Yet Another Importer",
        "order": 1,
        "properties": {
          "yai.indexExclude": {
            "type": "array",
            "description": "Glob patterns to exclude from indexing",
            "default": [
              "**/node_modules/**",
              "**/vendor/**"
            ],
            "items": {
              "type": "string"
            }
          },
          "yai.verbose": {
            "type": "boolean",
            "description": "Enable verbose logging",
            "default": false
          },
          "yai.enableCustomInput": {
            "type": "boolean",
            "description": "Enable custom input when importing modules",
            "default": false
          }
        }
      }
    ],
    "commands": [
      {
        "command": "yai.import",
        "title": "YAI: Import Module"
      },
      {
        "command": "yai.index",
        "title": "YAI: Index Modules"
      },
      {
        "command": "yai.repeatPreviousImport",
        "title": "YAI: Repeat Previous Import"
      }
    ],
    "views": {}
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "preintgtest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "intgtest": "node ./out/test/runTest.js",
    "test": "npx nyc mocha -r ts-node/register ./src/test/spec/*.test.ts"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.56.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^10.4.0",
    "nyc": "^15.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  }
}
